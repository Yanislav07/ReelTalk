@model ReelTalk.Data.Production

@{
	Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Delete</title>
</head>

<body>
	<div class="d-flex flex-column justify-content-center align-items-center" style="padding: 14rem 0;">
		<h2>Are you sure you want to delete @Model.Title?</h2>
		<div>
			<form asp-action="Delete">
				<input type="hidden" asp-for="Id" />
				<div class="d-flex gap-3">
					<input type="submit" value="Delete" class="btn btn-danger" />
					<a class="btn btn-secondary" asp-action="Index">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</body>
</html>
